# ========================================
# AICI SDE Challenge - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ========================================
# Database Configuration
# ========================================

# User Service Database
USER_DB_URL=postgresql://postgres:postgres@user-db:5432/users

# Todo Service Database  
TODO_DB_URL=postgresql://postgres:postgres@todo-db:5432/todos

# ========================================
# JWT Configuration
# ========================================

# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time
JWT_EXPIRES_IN=60m

# ========================================
# Service Configuration
# ========================================

# Node environment
NODE_ENV=production

# Service ports
USER_SERVICE_PORT=3001
TODO_SERVICE_PORT=3002
FRONTEND_PORT=3000

# ========================================
# Rate Limiting (User Service)
# ========================================

# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS Configuration
# ========================================

# Allowed origin for CORS
CORS_ORIGIN=http://localhost:3000

# ========================================
# Logging
# ========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# Docker Compose Override (Optional)
# ========================================
# If you want to override Docker Compose values,
# create a .env file and uncomment/modify these:

# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB_USERS=users
# POSTGRES_DB_TODOS=todos

# ========================================
# Development vs Production
# ========================================
# For development, you might want:
# NODE_ENV=development
# LOG_LEVEL=debug
# CORS_ORIGIN=* 